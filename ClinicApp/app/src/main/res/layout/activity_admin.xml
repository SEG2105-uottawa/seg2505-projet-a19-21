<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical"
    tools:context=".controller.AdminActivity">

    <TextView
        android:id="@+id/activity_admin_greeting_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texte de bienvenue, juste pour voir."
        android:layout_gravity="center"
        android:gravity="left"
        android:paddingVertical="5sp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="22dp"
        />

    <Button
        android:id="@+id/activity_admin_createservice_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:text="Create a new Service"
        />

    <Button
        android:id="@+id/activity_admin_manageservices_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:text="Manage services"
        />

    <Button
        android:id="@+id/activity_admin_manageusers_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:text="Manage users"
        />

</LinearLayout>