<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="#ffffff"
    android:orientation="vertical"

    tools:context=".controller.AdminActivity">

    <TextView
        android:id="@+id/activity_admin_greeting_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:gravity="left"
        android:paddingVertical="5sp"
        android:text="Texte de bienvenue, juste pour voir."
        android:textSize="22dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="148dp">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/white" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/user" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/white" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/clipboard" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/activity_admin_manageusers_btn"
            android:layout_width="113dp"
            android:layout_height="74dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="20dp"
            android:text="Manage users" />

        <Button
            android:id="@+id/activity_admin_manageservices_btn"
            android:layout_width="131dp"
            android:layout_height="74dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="20dp"
            android:text="Manage services" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="27dp" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        app:srcCompat="@mipmap/roundst" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="81dp">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/white" />

        <Button
            android:id="@+id/activity_admin_createservice_btn"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="20dp"
            android:text="Create a new Service" />
    </TableRow>

</LinearLayout>