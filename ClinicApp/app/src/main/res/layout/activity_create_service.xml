<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.CreateServiceActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="42dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="98dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="167dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/white" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="106dp"
            app:srcCompat="@mipmap/stetho" />

    </TableRow>

    <TableRow
        android:layout_width="371dp"
        android:layout_height="108dp">

        <TextView
            android:id="@+id/activity_create_service_title_txt"
            android:layout_width="323dp"
            android:layout_height="132dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="50dp"
            android:gravity="center"
            android:text="Create new service"
            android:textSize="30dp"
            android:textStyle="bold"

            />
    </TableRow>

    <EditText
        android:id="@+id/activity_create_service_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:hint="Service name"
        />

    <EditText
        android:id="@+id/activity_create_service_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:hint="Description"
        />



    <Button
        android:id="@+id/activity_create_service_create_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="Create"
        />

</LinearLayout>