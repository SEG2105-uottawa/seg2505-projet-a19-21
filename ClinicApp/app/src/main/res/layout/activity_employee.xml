<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".controller.MainActivity">


    <TextView
        android:id="@+id/activity_employee_greeting_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texte de bienvenue, juste pour voir."
        android:layout_gravity="center"
        android:gravity="left"
        android:paddingVertical="5sp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="22dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:id="@+id/activity_employee_clinic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/activity_employee_clinic_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Clinic name" />

            <TextView
                android:id="@+id/activity_employee_adress_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Adress 1" />

            <TextView
                android:id="@+id/activity_employee_city_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Adress 2" />

            <TextView
                android:id="@+id/activity_employee_phone_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Phone number" />

            <TextView
                android:id="@+id/activity_employee_hoursOp_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Todays Hours :"
                />

            <Button
                android:id="@+id/activity_employee_create_clinic_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:text="Create a clinic"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/activity_employee_services_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Services" />

            <Button
                android:id="@+id/activity_employee_add_service_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:text="Add a Service"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/activity_employee_appoint_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Appointments" />


        </LinearLayout>

    </LinearLayout>

