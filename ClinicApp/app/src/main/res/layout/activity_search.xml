<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.SearchActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/search_activity_greeting_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Greeting text"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="20dp">

        <TableRow
            android:layout_width="389dp"
            android:layout_height="158dp" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/activity_search_search_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Search" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <Button
                android:id="@+id/timesearchbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search by hours of operation" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/servicesearchbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search by service " />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/clinicsearchbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="search by clinic" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="20dp">
            <TextView
                android:id="@+id/activity_search_appointments_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Appointments" />
                <Button
                    android:id="@+id/appointviewbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="view bookings" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>